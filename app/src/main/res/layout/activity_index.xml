<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Station Name+inbound/outbound"
        android:id="@+id/work_station_name"
        android:layout_gravity="center_horizontal"
        android:onClick="gotoStationSetting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Train comes in: X mins"
        android:id="@+id/train_arrive_time_work"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time from your location to the work station"
        android:id="@+id/time_to_work_station"
        android:layout_gravity="center_horizontal"
        android:onClick="gotoTimeSetting" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Home Time"
        android:id="@+id/go_to_home_time"
        android:layout_gravity="center_horizontal"
        android:onClick="gotoTimeSetting" />

</LinearLayout>